<h1>Articles list</h1>
<% @articles.each do |article| %>
<div class="box">
  <h2><%= link_to article.title, article_path(article) %>  <small><%= link_to "delete", article_path(article),
    method: :delete,
    data: { confirm: "Are you sure?" }
   %></small></h2>
  <p ><%= article.content %></p>

  <br>
</div>
<% end %>
<br>
<%= link_to "Add a new article", "articles/new" %>
